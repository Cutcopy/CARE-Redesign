.container-fluid.footer-full
    background-color $brand-neutral
    background-image linear-gradient( 90deg, rgb(71,69,69) 0%, rgb(47,46,46) 100%)
footer
    color white
    font-size 1.2em
    
.contact-us
    margin-bottom 1.5em
    text-align center
.footer-socials
    list-style-type none
    text-align center
    text-shadow 2px 2px 4px rgba(0,0,0,0.75)
    padding-left 0px
    margin 0.5em 0em
    display flex
    flex-direction row
    justify-content space-between
    li
        a
            color white
            text-decoration none
            font-size 30px
            &:hover
                color $brand-primary
            
.footer-contact-form
    input, textarea
        color $brand-neutral
        display block
        width 100%
        padding 0.87em
        margin 1em 0em
        border-radius 6px
        box-shadow inset 2.5px 3px 0px 0px rgba(0, 0, 0, 0.58)
    textarea
        padding-bottom 8em
    input[type="submit"]
        color white
        box-shadow none
