//Sales Pitch///////////////////////////////////////
.sales-pitch
    margin-bottom 2em
    img
        img-shadow()
    h2 
        margin-bottom 1em

//Courses /////////////////////////////////////////
.courses-offered
    width 100%
    color white
    padding-bottom 1em
    brand-gradient()
    .row
        padding 1.5em
    img
        width 75%
        img-shadow()
    .call-now
        display inline-block
        line-height 1.2em
        
    .fa.fa-phone
        display inline-block
        margin-right 0.5em
        color $brand-primary
        background white
        border-radius 6px
        height 100px
        width 100px
        font-size 80px
        text-align center
        line-height 100px
        
    .fa.fa-graduation-cap
        padding-left 0.2em
        font-size 1.3em
            